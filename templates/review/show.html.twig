{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Review_text</th>
                <td>{{ review.reviewText }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr>
                <th>Date_posted</th>
                <td>{{ review.datePosted ? review.datePosted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Like_count</th>
                <td>{{ review.likeCount }}</td>
            </tr>
            <tr>
                <th>Dislike_count</th>
                <td>{{ review.dislikeCount }}</td>
            </tr>
            <tr>
                <th>album</th>
                <td>{{ review.album.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_review_index') }}">back to list</a>

    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>

    {{ include('review/_delete_form.html.twig') }}
{% endblock %}
