{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Review index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Review_text</th>
                <th>Rating</th>
                <th>Date_posted</th>
                <th>Like_count</th>
                <th>Dislike_count</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.reviewText }}</td>
                <td>{{ review.rating }}</td>
                <td>{{ review.datePosted ? review.datePosted|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ review.likeCount }}</td>
                <td>{{ review.dislikeCount }}</td>
                <td>
                    <a href="{{ path('app_review_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_review_new') }}">Create new</a>
{% endblock %}
